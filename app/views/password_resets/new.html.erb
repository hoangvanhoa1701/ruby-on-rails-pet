<div class="registration-form">
    <%= form_with url: password_reset_path do |form| %>
        <h1 class="text-center">Forgot your password?</h1>
        <div class="form-icon bg-dark"></div>

        <div class="form-group">
            <%= form.label :email %>
            <%= form.text_field :email, class: "form-control item", placeholder: "name@example.com" %>
        </div>

        <div class="form-group mx-auto">
            <%= form.submit "Reset Password", class: "btn btn-dark me-2" %>
            <%= link_to "Sign In", sign_in_path, class: "btn btn-outline-secondary" %>
        </div>
    <% end %>
</div>
