<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<% if Current.user %>
  <%= link_to 'New Article', new_article_path, class: "btn btn-success mb-4" %>
<% end %>

<div class="row">
  <% @articles.each do |article| %>
    <div class="col-4 mb-4">
      <div class="card" style="height: 100%">
        <img src="<%= article.image.url %>"
        alt="<%= article.image.filename %>"
        class="card-img-top" 
        style="height: 300px;object-fit: cover;"
        >
        <div class="card-body">
          <h5 class="card-title"><%= article.title %></h5>
          <p class="card-text"><%= article.body %></p>

          <%= link_to 'Show', article, class: "btn btn-sm btn-outline-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
