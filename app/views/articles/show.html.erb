<div class="registration-form">
    <div class="card">
      <img src="<%= @article.image.url %>"
      alt="<%= @article.image.filename %>"
      style="height: 300px;object-fit: cover;"
      class="card-img-top">
      <div class="card-body">
        <h5 class="card-title"><%= @article.title %></h5>
        <p class="card-text"><%= @article.body %></p>

        <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-sm btn-primary" %>
        <%= link_to 'Delete', @article, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
      </div>
    </div>
</div>

<div class="registration-form">
<h2>Comments</h2>
<%= render @article.comments %>

<% if @article.comments.empty? %>
  <p>Write your comment now!</p>
<% end %>
<div>
<div class="registration-form">
  <h3>Add a comment:</h3>
  <%= render 'comments/form' %>
<div>