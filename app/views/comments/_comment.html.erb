<% unless comment.private? %>
  <div class="card p-3 mb-2">
      <div class="d-flex flex-row"> <img src="https://i.pravatar.cc/300" height="40" width="40" class="rounded-circle">
          <div class="d-flex flex-column ms-2">
              <h6 class="mb-1 text-primary"><%= comment.commenter %></h6>
              <p class="comment-text"><%= comment.body %></p>
          </div>
      </div>
      <div class="d-flex justify-content-between">
          <div class="d-flex flex-row gap-3 align-items-center">
              <div class="d-flex align-items-center"> 
                <i class="fa fa-heart-o"></i> 
                <span class="ms-1 fs-10">
                  <%= link_to 'Delete', [comment.article, comment],
                    method: :delete,
                    data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
                </span> 
              </div>
          </div>
          <div class="d-flex flex-row"> <span class="text-muted fw-normal fs-10"><%= comment.created_at %></span> </div>
      </div>
  </div>
<% end %>